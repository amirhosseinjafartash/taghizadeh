extend layout
block content
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(method='post', action='/users/signin',)
        br
        h1 SignIn
        h3 Fill the blanks
        br
        .form-group
            label Username
            input.form-control(type='text', name='username', placeholder='Enter your Username')
        br
        .form-group
            label Password
            input.form-control(name='pass1', type='password', placeholder='Enter your password')
        br
        button.btn.btn-lg.btn-primary.btn-block(type = 'submit', name='submit', value='Login') SignIn