extend layout
block content
    br
    h1 SignUp
    h3 Fill the blanks
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(method='post', action='/users/signup', enctype='multipart/form-data')
        br
        .form-group
            label Name
            input.form-control(type='text', name='name', placeholder='Enter your Name')
        br
        .form-group
            label Username
            input.form-control(type='text', name='username', placeholder='Enter your Username')
        br
        .form-group
            label Email
            input.form-control(type='email', name='email', placeholder='Enter your Email')
        br
        .form-group
            label Password
            input.form-control(name='pass1', type='text', placeholder='Enter your password')
        br
        .form-group
            label Confirm Password
            input.form-control(name='pass2', type='text', placeholder='Confirm your password')
        br
        .form-group
            label Profile Image
            input.form-control(name='profile', type='file')
        br
        button.btn.btn-lg.btn-primary.btn-block(type = 'submit', name='submit', value='Register') SignUp